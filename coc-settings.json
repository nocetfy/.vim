{
    "java.home": "/usr/lib/jvm/java-8-jdk/",
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "java",
        "go",
        "rs",
        "sh"
    ],
    "python.formatting.provider": "black",
    "suggest.noselect": false,
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false
}
